				APPEND_FILE ~faiths_and_powers/spheres/clab/ranger.txt~
			  BUT_ONLY
			  OUTER_INNER_PATCH ~%sphere%~ BEGIN
				SNPRINT 3 ~shortsphere~ ~%sphere%~
			  END
			  COPY_EXISTING ~%kit_clab%.2da~ ~override~ 
				REPLACE_TEXTUALLY ~ZZZ~ ~%shortsphere%~
			  BUT_ONLY
			  OUTER_TEXT_SPRINT minor_sphere_list ~%minor_sphere_list% %sphere%,~
			END
		  END
		END
		ACTION_IF (%kit_class% = 3) OR  
	  			(%kit_class% = 11) OR  
	  			(%kit_class% = 8) OR  
	  			(%kit_class% = 14) OR  
	  			(%kit_class% = 15) OR  
	  			(%kit_class% = 18) BEGIN
