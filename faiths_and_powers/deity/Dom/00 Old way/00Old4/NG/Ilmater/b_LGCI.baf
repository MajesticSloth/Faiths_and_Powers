IF
	Kit(LastSummonerOf(Myself),TRUECLASS)
THEN
	RESPONSE #100
	ActionOverride(LastSummonerOf(Myself),AddSuperKit(B_CLERIC_ILMATER))
	DestroySelf()
END


IF
	Kit(LastSummonerOf(Myself),B_ARCHIVIST)
THEN
	RESPONSE #100
	ActionOverride(LastSummonerOf(Myself),AddSuperKit(B_PRIEST_ILMATER))
	DestroySelf()
END


