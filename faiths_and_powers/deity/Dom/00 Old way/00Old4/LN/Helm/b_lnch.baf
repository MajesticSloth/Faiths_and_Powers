IF
	Kit(LastSummonerOf(Myself),TRUECLASS)
THEN
	RESPONSE #100
	ActionOverride(LastSummonerOf(Myself),AddSuperKit(B_CLERIC_HELM))
	DestroySelf()
END

IF
	Kit(LastSummonerOf(Myself),B_BATTLEPRIEST)
THEN
	RESPONSE #100
	ActionOverride(LastSummonerOf(Myself),AddSuperKit(B_CHAMPION_HELM))
	DestroySelf()
END
