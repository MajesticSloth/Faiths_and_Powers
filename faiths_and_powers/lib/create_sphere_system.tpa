COPY_EXISTING_REGEXP GLOB ~.*\.spl~ ~override~
	READ_SHORT 0x1c ~spelltype~
	PATCH_IF (~spelltype~ = 2) BEGIN
		WRITE_BYTE 0x21 (THIS | 0b11000000)
	END
