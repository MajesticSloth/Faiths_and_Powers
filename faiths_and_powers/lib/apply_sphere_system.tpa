	SAY NAME1 @1100
	SAY UNIDENTIFIED_DESC @1101
COPY ~faiths_and_powers/spheres/d5spmema.bam~ ~override~
COPY ~faiths_and_powers/spheres/d5spmemb.bam~ ~override~

OUTER_SPRINT sphere_access @1002
